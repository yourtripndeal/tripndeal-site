<section class="py-12 px-4 max-w-6xl mx-auto">
  <h2 class="text-3xl font-bold text-center mb-8">Featured Packages</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for package in packages %}
      <div class="bg-white rounded-lg shadow hover:shadow-lg transition overflow-hidden">
        <img src="/images/{{ package.image }}" alt="{{ package.title }}" class="w-full h-48 object-cover">
        <div class="p-4">
          <h3 class="text-xl font-semibold mb-2">{{ package.title }}</h3>
          <p class="text-gray-600 mb-4">{{ package.description }}</p>
          <a href="/packages/{{ package.slug }}/" class="text-blue-500 hover:underline">View Details</a>
        </div>
      </div>
    {% endfor %}
  </div>
</section>