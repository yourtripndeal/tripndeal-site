---
layout: layout.njk
title: Home
---

{% set packages = collections.travelPackages | reverse | slice(0, 6) %}

<!-- Header -->
<header class="bg-white shadow-md">
  <div class="max-w-screen-xl mx-auto px-4 py-6 flex items-center justify-between">
    <div class="text-4xl font-extrabold tracking-tight text-indigo-700">Trip & Deal</div>
    <nav class="space-x-6 text-gray-700 font-medium">
      <a href="/" class="hover:text-indigo-700 transition">Home</a>
      <a href="/about/" class="hover:text-indigo-700 transition">About Us</a>
      <a href="/packages/" class="hover:text-indigo-700 transition">Packages</a>
      <a href="/contact/" class="hover:text-indigo-700 transition">Contact</a>
    </nav>
  </div>
</header>

<!-- Hero Section -->
<section class="relative py-28 px-4 text-center text-white bg-[url('/images/hero-bg.jpg')] bg-cover bg-center">
  <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/50 to-transparent"></div>
  <div class="relative z-10 max-w-3xl mx-auto">
    <h1 class="text-5xl font-extrabold mb-4 animate-fadeIn">Explore Asia with Trip & Deal</h1>
    <p class="text-lg mb-6 animate-fadeIn delay-100">Curated travel packages for families, couples, and adventurers — all at unbeatable prices.</p>
    <a href="/packages/" class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-full hover:bg-indigo-700 transition duration-300 animate-fadeIn delay-200">
      Browse Packages
    </a>
  </div>
</section>

<!-- Featured Packages -->
<section class="py-20 px-4 max-w-screen-xl mx-auto">
  <h2 class="text-3xl font-bold text-center mb-12">Featured Packages</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    {% for package in packages %}
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition transform hover:scale-[1.02] duration-300 animate-fadeInUp">
        <img 
          src="/images/{{ package.data.image or 'default.jpg' }}" 
          alt="{{ package.data.title }}" 
          class="w-full aspect-[4/3] object-cover rounded-t-xl" 
          loading="lazy"
        >
        <div class="p-5">
          <h3 class="text-xl font-semibold mb-2">{{ package.data.title }}</h3>
          <p class="text-gray-600 mb-4">
            {{ package.data.description | truncate(120, true, '...') }}
          </p>
          <a href="{{ package.url }}" class="text-indigo-600 hover:underline">View Details</a>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="text-center mt-12">
    <a href="/packages/" class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-full hover:bg-indigo-700 transition">
      View All Packages
    </a>
  </div>
</section>

<!-- Footer -->
<footer class="bg-gray-100 py-10 mt-20">
  <div class="max-w-screen-xl mx-auto px-4 text-center text-gray-600">
    <p class="mb-2">© 2025 Trip & Deal. All rights reserved.</p>
    <div class="space-x-4">
      <a href="/about/" class="hover:text-indigo-600">About Us</a>
      <a href="/contact/" class="hover:text-indigo-600">Contact</a>
      <a href="https://facebook.com/tripndeal" class="hover:text-indigo-600">Facebook</a>
      <a href="https://instagram.com/tripndeal" class="hover:text-indigo-600">Instagram</a>
    </div>
  </div>
</footer>